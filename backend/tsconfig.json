{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
          "test/*": ["test/*"]
        },
        "types": ["reflect-metadata", "jest", "@types/jest"],
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude" : ["src/**/*.test.ts"]
}